# Description: Ext2/3/4 Filesystem Utilities
# URL:         http://e2fsprogs.sourceforge.net/

name=e2fsprogs
version=1.46.2
release=2
source=(https://www.kernel.org/pub/linux/kernel/people/tytso/$name/v$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr             \
		--with-root-prefix=       \
		--disable-e2initrd-helper \
		--enable-fsck             \
		--enable-libblkid         \
		--enable-libuuid          \
		--disable-fuse2fs         \
		--disable-nls             \
		--disable-uuidd           \
		--enable-elf-shlibs       \
		--enable-symlink-install  \

	make V=1
	make -j1 MKDIR_P="install -d" DESTDIR=$PKG install install-libs
}
